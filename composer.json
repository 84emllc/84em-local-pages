{
  "name": "84em/local-pages-generator",
  "description": "WordPress plugin for generating SEO-optimized local pages using Claude AI",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "84EM",
      "email": "andrew@84em.com"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "wp-cli/wp-cli": "^2.9",
    "wp-cli/wp-cli-tests": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "EightyFourEM\\LocalPages\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EightyFourEM\\LocalPages\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "wp 84em local-pages --test --all",
    "test:encryption": "wp 84em local-pages --test --suite=encryption",
    "test:data": "wp 84em local-pages --test --suite=data-structures",
    "test:content": "wp 84em local-pages --test --suite=content-processing",
    "test:cli": "wp 84em local-pages --test --suite=cli-args",
    "test:schema": "wp 84em local-pages --test --suite=ld-json",
    "test:api": "wp 84em local-pages --test --suite=api-client",
    "test:generators": "wp 84em local-pages --test --suite=content-generators",
    "test:errors": "wp 84em local-pages --test --suite=error-handling",
    "test:security": "wp 84em local-pages --test --suite=security",
    "test:models": "wp 84em local-pages --test --suite=model-management"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.4"
    }
  }
}
